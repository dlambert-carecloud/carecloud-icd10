<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<h1>Chapters</h1>

   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% codes.forEach(function(code){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <div class="caption">
                    <h4><%= code.chapter %></h4>
                </div>
            </div>
        </div>
    <% }); %>
    </div>

</body>
</html>